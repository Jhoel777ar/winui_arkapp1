<Page
    x:Class="ark_app1.AddProductDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="10" MinWidth="300" Margin="10">
        <TextBox x:Name="CodigoTextBox" Header="Código"/>
        <TextBox x:Name="NombreTextBox" Header="Nombre"/>
        <ComboBox x:Name="CategoriaComboBox" Header="Categoría"/>
        <TextBox x:Name="TallaTextBox" Header="Talla"/>
        <TextBox x:Name="ColorTextBox" Header="Color"/>
        <NumberBox x:Name="PrecioCompraNumberBox" Header="Precio de Compra" SpinButtonPlacementMode="Compact"/>
        <NumberBox x:Name="PrecioVentaNumberBox" Header="Precio de Venta" SpinButtonPlacementMode="Compact"/>
        <NumberBox x:Name="StockNumberBox" Header="Stock" SpinButtonPlacementMode="Compact"/>
        <TextBox x:Name="UnidadMedidaTextBox" Header="Unidad de Medida"/>
        <NumberBox x:Name="StockMinimoNumberBox" Header="Stock Mínimo" SpinButtonPlacementMode="Compact"/>
    </StackPanel>
</Page>