<Window
    x:Class="ark_app1.AddProductDialogContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:ark_app1"
    mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop/>
    </Window.SystemBackdrop>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleTextBlock" Text="Registrar Nueva Compra" FontSize="24" FontWeight="SemiBold" Margin="0,0,0,20"/>

        <!-- Formulario para agregar/editar productos a la compra -->
        <StackPanel Grid.Row="1" Spacing="10">
            <TextBox x:Name="CodigoTextBox" Header="Código del Producto *" PlaceholderText="Ej: PROD001"/>
            <TextBox x:Name="NombreTextBox" Header="Nombre del Producto *" PlaceholderText="Ej: Gaseosa 3L"/>
            <ComboBox x:Name="CategoriaComboBox" Header="Categoría" PlaceholderText="Seleccione una categoría"/>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="TallaTextBox" Header="Talla (Opcional)" PlaceholderText="Ej: M, L, XL"/>
                <TextBox Grid.Column="1" x:Name="ColorTextBox" Header="Color (Opcional)" PlaceholderText="Ej: Rojo, Azul"/>
            </Grid>
            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <NumberBox Grid.Column="0" x:Name="PrecioCompraNumberBox" Header="Precio de Compra *" SpinButtonPlacementMode="Compact" Minimum="0"/>
                <NumberBox Grid.Column="1" x:Name="PrecioVentaNumberBox" Header="Precio de Venta *" SpinButtonPlacementMode="Compact" Minimum="0"/>
            </Grid>
            <Grid ColumnSpacing="10">
                 <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <NumberBox Grid.Column="0" x:Name="CantidadNumberBox" Header="Cantidad *" SpinButtonPlacementMode="Compact" Minimum="1" Value="1"/>
                <TextBox Grid.Column="1" x:Name="UnidadMedidaTextBox" Header="Unidad de Medida (Opcional)" PlaceholderText="Ej: Unidad, Caja, Paquete"/>
            </Grid>
            <NumberBox x:Name="StockMinimoNumberBox" Header="Stock Mínimo (Opcional)" SpinButtonPlacementMode="Compact" Minimum="0" Value="5"/>

            <Button x:Name="AddProductToListButton" Content="Agregar Producto a la Lista" Click="AddProductToListButton_Click" HorizontalAlignment="Stretch" Margin="0,10,0,0"/>
        </StackPanel>

        <!-- Lista de productos agregados -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Productos en esta compra:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
            <ListView x:Name="ProductosListView" Grid.Row="1">
                <ListView.HeaderTemplate>
                    <DataTemplate>
                        <Grid Padding="12" Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Nombre" Style="{ThemeResource CaptionTextBlockStyle}" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="1" Text="Cantidad" Style="{ThemeResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="P. Compra" Style="{ThemeResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="Subtotal" Style="{ThemeResource CaptionTextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.HeaderTemplate>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="local:Producto">
                        <Grid Padding="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{x:Bind Nombre}"/>
                            <TextBlock Grid.Column="1" Text="{x:Bind Cantidad}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="2" Text="{x:Bind PrecioCompra, Mode=OneWay}" HorizontalAlignment="Right"/>
                            <TextBlock Grid.Column="3" Text="{x:Bind Subtotal, Mode=OneWay}" HorizontalAlignment="Right"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Acciones principales y barra de notificaciÃ³n -->
        <StackPanel Grid.Row="3" Spacing="10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <InfoBar x:Name="NotificationBar" IsOpen="False" HorizontalAlignment="Stretch" />
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <Button x:Name="SaveCompraButton" Content="Guardar Compra" Click="SaveCompraButton_Click">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource AccentButtonStyle}"/>
                    </Button.Style>
                </Button>
                <Button x:Name="CancelButton" Content="Cancelar" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
