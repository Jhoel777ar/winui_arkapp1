<Window
    x:Class="ark_app1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ark_app1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="SQL Server Login">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10" Width="400">
            <TextBlock Text="Conectar al servidor" Style="{ThemeResource TitleTextBlockStyle}" TextAlignment="Center" />
            <TextBox Header="Nombre del servidor" x:Name="ServerNameTextBox" />
            <ComboBox Header="Autenticación" x:Name="AuthenticationComboBox" SelectionChanged="AuthenticationComboBox_SelectionChanged">
                <ComboBoxItem Content="Windows Authentication" IsSelected="True"/>
                <ComboBoxItem Content="SQL Server Authentication"/>
            </ComboBox>
            <StackPanel x:Name="SqlAuthenticationStackPanel" Visibility="Collapsed" Spacing="10">
                <TextBox Header="Username" x:Name="UsernameTextBox" />
                <PasswordBox Header="Password" x:Name="PasswordBox" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Probar conexión" x:Name="TestConnectionButton" Click="TestConnectionButton_Click"/>
                <Button Content="Aceptar" x:Name="ConnectButton" Click="ConnectButton_Click"/>
            </StackPanel>
            <InfoBar x:Name="InfoBar" IsOpen="False" />
        </StackPanel>
    </Grid>
</Window>