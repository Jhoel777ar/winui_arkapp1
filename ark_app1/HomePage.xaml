<Page
    x:Class="ark_app1.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header & Actions -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <TextBlock Text="Panel de Control" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBlock Text="Resumen General y Configuración" Style="{StaticResource CaptionTextBlockStyle}" Foreground="Gray"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                <Button Click="EditCompany_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE713;" FontSize="16"/>
                        <TextBlock Text="Configurar Empresa" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button Click="GenerateReport_Click" Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8A7;" FontSize="16"/>
                        <TextBlock Text="Generar Reporte Completo" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Stats Cards (Optional/Simple) -->
        <Grid Grid.Row="1" ColumnSpacing="20" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Could bind these later -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Ventas Totales (Histórico)" Foreground="Gray"/>
                    <TextBlock x:Name="TxtTotalSales" Text="Bs. 0.00" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Productos Activos" Foreground="Gray"/>
                    <TextBlock x:Name="TxtTotalProducts" Text="0" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
            <Border Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="8" Padding="15">
                <StackPanel>
                    <TextBlock Text="Clientes Registrados" Foreground="Gray"/>
                    <TextBlock x:Name="TxtTotalClients" Text="0" FontSize="24" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts Area -->
        <Grid Grid.Row="2" ColumnSpacing="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sales Chart -->
            <Border Background="Transparent" CornerRadius="8" Padding="20">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="Ventas (Últimos 7 Días)" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="SalesChart" Grid.Row="1" VerticalAlignment="Bottom">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="20"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Bottom" ToolTipService.ToolTip="{Binding Tooltip}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!-- Bar -->
                                    <Rectangle Grid.Row="0" Width="30" Height="{Binding Height}" Fill="{ThemeResource AccentFillColorDefaultBrush}" RadiusX="4" RadiusY="4"/>
                                    <!-- Label -->
                                    <TextBlock Grid.Row="1" Text="{Binding Label}" HorizontalAlignment="Center" FontSize="10" Margin="0,5,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

            <!-- Profit Chart -->
            <Border Grid.Column="1" Background="Transparent" CornerRadius="8" Padding="20">
                <Grid RowDefinitions="Auto, *">
                    <TextBlock Text="Ganancia Estimada (Últimos 7 Días)" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="ProfitChart" Grid.Row="1" VerticalAlignment="Bottom">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Spacing="20"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid VerticalAlignment="Bottom" ToolTipService.ToolTip="{Binding Tooltip}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Rectangle Grid.Row="0" Width="30" Height="{Binding Height}" Fill="#107C10" RadiusX="4" RadiusY="4"/>
                                    <TextBlock Grid.Row="1" Text="{Binding Label}" HorizontalAlignment="Center" FontSize="10" Margin="0,5,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>
        </Grid>

        <InfoBar x:Name="ResultInfoBar" VerticalAlignment="Bottom" Margin="20" IsOpen="False"/>
    </Grid>
</Page>
