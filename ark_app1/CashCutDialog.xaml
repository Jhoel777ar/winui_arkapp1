<ContentDialog
    x:Class="ark_app1.CashCutDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Corte de Caja (Arqueo Diario)"
    CloseButtonText="Cerrar"
    DefaultButton="Close">

    <Grid MinWidth="400">
        <StackPanel Spacing="15">
            <ProgressRing x:Name="LoadingRing" IsActive="True" HorizontalAlignment="Center" />
            <TextBlock x:Name="ErrorBlock" Foreground="Red" TextWrapping="Wrap" Visibility="Collapsed" />

            <StackPanel x:Name="StatsPanel" Visibility="Collapsed" Spacing="10">
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <PersonPicture Height="40" />
                    <StackPanel>
                        <TextBlock x:Name="UserBlock" FontWeight="Bold" FontSize="16" />
                        <TextBlock x:Name="DateBlock" Foreground="Gray" FontSize="12" />
                    </StackPanel>
                </StackPanel>

                <Rectangle Height="1" Fill="LightGray" />

                <Grid RowSpacing="10" ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Text="Total Ventas (Cantidad):" Grid.Row="0" Grid.Column="0" />
                    <TextBlock x:Name="CountBlock" FontWeight="Bold" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Right"/>

                    <TextBlock Text="Efectivo en Caja:" Grid.Row="1" Grid.Column="0" Foreground="Green"/>
                    <TextBlock x:Name="CashBlock" FontWeight="Bold" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Foreground="Green"/>

                    <TextBlock Text="Tarjeta:" Grid.Row="2" Grid.Column="0" />
                    <TextBlock x:Name="CardBlock" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right"/>

                    <TextBlock Text="QR:" Grid.Row="3" Grid.Column="0" />
                    <TextBlock x:Name="QrBlock" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right"/>

                    <TextBlock Text="Transferencia:" Grid.Row="4" Grid.Column="0" />
                    <TextBlock x:Name="TransferBlock" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Right"/>

                    <Rectangle Grid.Row="5" Grid.ColumnSpan="2" Height="1" Fill="Black" Margin="0,5" />
                </Grid>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                    <TextBlock Text="TOTAL GENERAL:" FontSize="18" VerticalAlignment="Center" />
                    <TextBlock x:Name="TotalSalesBlock" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" />
                </StackPanel>

                <InfoBar Severity="Informational" IsOpen="True" IsClosable="False"
                         Message="Este reporte suma todas las ventas realizadas por su usuario desde las 00:00 hrs de hoy." />
            </StackPanel>
        </StackPanel>
    </Grid>
</ContentDialog>
