<Page x:Class="ark_app1.TermsAndConditionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="32,20">
        <StackPanel MaxWidth="800" Spacing="28">

            <StackPanel HorizontalAlignment="Center" Spacing="20">
                <Image Source="https://www.ark-dev.org/logos/arkdevsystem.png"
                       Width="300" Height="200" Stretch="Uniform"/>
                <TextBlock Text="Términos y Condiciones"
                           Style="{ThemeResource TitleTextBlockStyle}"
                           FontSize="34" HorizontalAlignment="Center"/>
            </StackPanel>

            <TextBlock Text="ArkStock – Sistema de Ventas e Inventario"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       FontSize="22" HorizontalAlignment="Center"/>

            <TextBlock TextWrapping="WrapWholeWords" FontSize="16" LineHeight="26" TextAlignment="Center">
                ArkStock es un software gratuito de punto de venta e inventario diseñado para cualquier tipo de tienda.
                Desarrollado por <Hyperlink NavigateUri="https://ark-dev.org">ARK DEV SYSTEM</Hyperlink>,
                una división de ARK DEV liderada por su Creador Principal Joel Andrés.
            </TextBlock>

            <TextBlock Text="Privacidad y Seguridad de tus Datos"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       Margin="0,20,0,8"/>

            <TextBlock TextWrapping="Wrap" FontSize="15" LineHeight="24">
                Tu privacidad es nuestra máxima prioridad. El sistema funciona 100% local:
            </TextBlock>

            <StackPanel Margin="24,0,0,0" Spacing="14">
                <TextBlock Text="• La aplicación se ejecuta completamente en tu computadora. No requiere conexión a internet."
                           FontSize="15"/>
                <TextBlock Text="• Todos los datos (clientes, productos, ventas, usuarios y contraseñas) se guardan exclusivamente en una base de datos local en tu PC."
                           FontSize="15"/>
                <TextBlock Text="• Ningún dato se sube a la nube ni se comparte con terceros. Tu información nunca abandona tu equipo."
                           FontSize="15"/>
                <TextBlock Text="• Las contraseñas están protegidas con cifrado BCrypt de estándar industrial."
                           FontSize="15"/>
            </StackPanel>

            <TextBlock Text="Uso del Software"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       Margin="0,20,0,8"/>

            <TextBlock TextWrapping="Wrap" FontSize="15" LineHeight="24">
                Al utilizar ArkStock aceptas ser el único responsable de la seguridad de tu equipo y de los datos almacenados en él.
                Recomendamos mantener Windows y tu antivirus siempre actualizados.
            </TextBlock>

            <TextBlock TextWrapping="Wrap" FontSize="16" LineHeight="28" Margin="0,40,0,0" HorizontalAlignment="Center">
                <Run FontWeight="SemiBold">Gracias por confiar en ArkStock.</Run>
                <LineBreak/>
                <Run FontStyle="Italic" Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                    Software gratuito • 100% local • Sin rastreo • Creador principal: Joel Andrés • Revisión: 60% por IA
                </Run>
            </TextBlock>

        </StackPanel>
    </ScrollViewer>
</Page>