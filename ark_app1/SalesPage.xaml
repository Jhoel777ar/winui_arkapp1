<Page
    x:Class="ark_app1.SalesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Left: Product Selection -->
        <Grid Grid.Column="0" Margin="0,0,20,0" RowDefinitions="Auto, *">
            <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,10">
                <TextBlock Text="Punto de Venta" Style="{StaticResource TitleTextBlockStyle}"/>
                <TextBox x:Name="ProductSearchBox" PlaceholderText="Buscar producto por nombre o código..." TextChanged="ProductSearchBox_TextChanged"/>
            </StackPanel>

            <controls:DataGrid x:Name="ProductsGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="ProductsGrid_SelectionChanged">
                <controls:DataGrid.Columns>
                    <controls:DataGridTextColumn Header="Código" Binding="{Binding Codigo}"/>
                    <controls:DataGridTextColumn Header="Producto" Binding="{Binding Nombre}" Width="200"/>
                    <controls:DataGridTextColumn Header="Stock" Binding="{Binding Stock}"/>
                    <controls:DataGridTextColumn Header="Precio" Binding="{Binding PrecioVenta}"/>
                    <controls:DataGridTemplateColumn Header="Acción">
                        <controls:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Agregar" Click="AddToCart_Click" Tag="{Binding}"/>
                            </DataTemplate>
                        </controls:DataGridTemplateColumn.CellTemplate>
                    </controls:DataGridTemplateColumn>
                </controls:DataGrid.Columns>
            </controls:DataGrid>
        </Grid>

        <!-- Right: Cart & Checkout -->
        <Grid Grid.Column="1" RowDefinitions="Auto, *, Auto" Background="{ThemeResource LayerFillColorDefaultBrush}" Padding="15" CornerRadius="8">
            <TextBlock Text="Carrito de Compras" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,15"/>

            <ListView x:Name="CartList" Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding PrecioUnitario}" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                            <NumberBox Grid.Column="1" Value="{Binding Cantidad, Mode=TwoWay}" Minimum="1" SpinButtonPlacementMode="Compact" Width="80" ValueChanged="CartQty_ValueChanged"/>
                            <TextBlock Grid.Column="2" Text="{Binding Subtotal}" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackPanel Grid.Row="2" Spacing="10" Margin="0,15,0,0">
                <Grid>
                    <TextBlock Text="Total:" FontWeight="Bold" FontSize="18"/>
                    <TextBlock x:Name="TotalText" Text="$0.00" FontWeight="Bold" FontSize="18" HorizontalAlignment="Right"/>
                </Grid>

                <NumberBox x:Name="EfectivoBox" Header="Efectivo Recibido" Minimum="0" SpinButtonPlacementMode="Compact" ValueChanged="EfectivoBox_ValueChanged"/>
                <TextBlock x:Name="CambioText" Text="Cambio: $0.00" HorizontalAlignment="Right" Foreground="Gray"/>

                <Button Content="Finalizar Venta" HorizontalAlignment="Stretch" Style="{StaticResource AccentButtonStyle}" Click="CheckoutButton_Click"/>
                <Button Content="Cancelar" HorizontalAlignment="Stretch" Click="ClearCart_Click"/>

                <InfoBar x:Name="CartInfoBar" IsOpen="False"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
