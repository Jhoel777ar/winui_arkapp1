<ContentDialog
    x:Class="ark_app1.SerialInputDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    PrimaryButtonText="Guardar"
    SecondaryButtonText="Omitir"
    DefaultButton="Primary">

    <StackPanel Spacing="10" MinWidth="300">
        <TextBlock x:Name="ProductNameBlock" FontWeight="Bold" TextWrapping="Wrap" />
        <TextBlock Text="Si este producto tiene garantía o número de serie único, ingréselo abajo para que aparezca en el registro y ticket."
                   Foreground="Gray" FontSize="12" TextWrapping="Wrap"/>
        <TextBox x:Name="SerialBox" PlaceholderText="Ej. SN-123456789" />
    </StackPanel>
</ContentDialog>
