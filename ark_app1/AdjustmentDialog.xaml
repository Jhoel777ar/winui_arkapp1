<Window
    x:Class="ark_app1.AdjustmentDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ajuste de Inventario">

    <StackPanel Padding="24" Spacing="16">
        <TextBlock Text="Registrar Ajuste de Stock" Style="{StaticResource TitleTextBlockStyle}"/>

        <ComboBox x:Name="ProductComboBox" Header="Producto" DisplayMemberPath="Nombre" SelectedValuePath="Id" HorizontalAlignment="Stretch" SelectionChanged="ProductComboBox_SelectionChanged"/>

        <TextBlock x:Name="StockActualText" Text="Stock Actual: -" Foreground="Gray"/>

        <Grid ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <NumberBox Grid.Column="0" x:Name="CantidadBox" Header="Cantidad a Ajustar" PlaceholderText="Ej: -5 o 10" ToolTipService.ToolTip="Use negativos para restar stock" SpinButtonPlacementMode="Compact"/>
            <TextBox Grid.Column="1" x:Name="MotivoTextBox" Header="Motivo" PlaceholderText="Ej: DaÃ±ado, Robo, Regalo"/>
        </Grid>

        <InfoBar x:Name="InfoBar" IsOpen="False"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,20,0,0">
            <Button Content="Cancelar" Click="CancelButton_Click"/>
            <Button Content="Guardar Ajuste" Style="{StaticResource AccentButtonStyle}" Click="SaveButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
